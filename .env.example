# === Contracts Deploy ===
DEPLOYER_PRIVATE_KEY=0x...
USDC_ADDRESS=0x036CbD53842c5426634e7929541eC2318f3dCF7e
# Optional: deploy lending contracts now (1) or skip for later milestone (0/default)
DEPLOY_LENDING=0
# Required only when DEPLOY_LENDING=1 (external ERC-8004 identity contract)
ERC8004_IDENTITY_ADDRESS=0x...

# Arbiter address for keeper approval in ShardValuation.
# Must match the address derived from ARBITER_PRIVATE_KEY.
# If not set, only the deployer can attest. Set this if your arbiter differs from the deployer.
ARBITER_ADDRESS=0x...

# === Web App (apps/web) ===
ARBITER_PRIVATE_KEY=0x...
SESSION_SECRET=change-me-to-random-64-char-string
# Feature flags
NEXT_PUBLIC_ENABLE_LENDING=false
# Server override for API routes (optional; defaults to NEXT_PUBLIC_ENABLE_LENDING)
# ENABLE_LENDING=false
# === Database (Turso / libSQL) ===
# Remote: set both for Turso. Local dev: leave TURSO_DB_URL empty to use file:./siphon.db
TURSO_DB_URL=libsql://your-db.turso.io
TURSO_AUTH_TOKEN=your-token

# Coinbase Developer Platform — Paymaster (optional, enables gasless tx for Smart Wallet users)
# Get from: portal.cdp.coinbase.com → Onchain Tools → Paymaster → Base Sepolia
# Add all 10 contract addresses to the allowlist in the CDP dashboard.
CDP_PAYMASTER_URL=https://api.developer.coinbase.com/rpc/v1/base-sepolia/YOUR_API_KEY

# Optional durable rate limiting backend for middleware (Upstash/Vercel KV REST)
KV_REST_API_URL=
KV_REST_API_TOKEN=

# Stripe (optional — lazy-loaded, app runs without it)
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs (create in Stripe Dashboard → Products)
STRIPE_PRICE_TRAINER_PLUS=price_...
STRIPE_PRICE_KEEPER=price_...
STRIPE_PRICE_KEEPER_PLUS=price_...
STRIPE_PRICE_KEEPER_PRO=price_...

# LLM Provider — works with any OpenAI-compatible API
# Just set these 3 vars. Only LLM_API_KEY is required for cloud providers.
# Local models (Ollama, LM Studio) don't need a key at all.
LLM_API_KEY=sk-...
LLM_BASE_URL=                  # leave blank for OpenAI, or set to:
                               #   http://localhost:11434/v1  (Ollama)
                               #   http://localhost:1234/v1   (LM Studio)
                               #   https://api.together.xyz/v1 (Together)
                               #   https://api.groq.com/openai/v1 (Groq)
LLM_MODEL=gpt-4o-mini         # or: llama3.2, mixtral, etc.
# Legacy fallback: OPENAI_API_KEY still works if LLM_API_KEY is not set
# OPENAI_API_KEY=sk-...

# Waitlist (Google Sheets Apps Script web app URL)
GOOGLE_SHEET_WAITLIST_URL=https://script.google.com/macros/s/YOUR_SCRIPT_ID/exec

# USDC address (Base Sepolia default)
NEXT_PUBLIC_USDC_ADDRESS=0x036CbD53842c5426634e7929541eC2318f3dCF7e

# Contract addresses (populated by Deploy.s.sol output)
NEXT_PUBLIC_SHARD_REGISTRY_ADDRESS=0x...
NEXT_PUBLIC_KEEPER_STAKING_ADDRESS=0x...
NEXT_PUBLIC_BATTLE_SETTLEMENT_ADDRESS=0x...
NEXT_PUBLIC_ERC8004_IDENTITY_ADDRESS=0x...
# Backward compatibility (if set, used as fallback)
# NEXT_PUBLIC_SIPHON_IDENTITY_ADDRESS=0x...
NEXT_PUBLIC_SHARD_VALUATION_ADDRESS=0x...
NEXT_PUBLIC_LOAN_VAULT_ADDRESS=0x...
NEXT_PUBLIC_SUBSCRIPTION_STAKING_ADDRESS=0x...
NEXT_PUBLIC_SHARD_MARKETPLACE_ADDRESS=0x...
NEXT_PUBLIC_SWARM_REGISTRY_ADDRESS=0x...
NEXT_PUBLIC_BOUNTY_BOARD_ADDRESS=0x...
